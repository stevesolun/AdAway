<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AdAway" parent="Base.AdAway" />

    <!-- Material 3 baseline for modern UI -->
    <style name="Base.AdAway" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primaryVariant</item>
        <item name="colorOnSecondary">@color/onPrimary</item>
        <!-- Modern dark background defaults -->
        <item name="colorSurface">@color/ui_surface</item>
        <item name="colorOnSurface">@color/ui_text_primary</item>
        <item name="android:colorBackground">@color/ui_bg</item>
        <item name="android:windowBackground">@color/ui_bg</item>
        <item name="android:textColorPrimary">@color/ui_text_primary</item>
        <item name="android:textColorSecondary">@color/ui_text_secondary</item>

        <!--
            Material 3 color tokens used by new filter-list UI.
            The app theme is MaterialComponents, so provide safe fallbacks to
            prevent InflateException when views resolve these attributes.
        -->
        <item name="colorSurfaceVariant">?attr/colorSurface</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnSurface</item>
        <item name="colorOutlineVariant">?attr/colorOnSurface</item>
        <item name="colorSecondaryContainer">?attr/colorSecondary</item>
        <item name="colorOnSecondaryContainer">?attr/colorOnSecondary</item>
        <item name="colorTertiary">?attr/colorPrimary</item>

        <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
        <item name="colorPrimaryDark">?colorPrimary</item>
    </style>

    <style name="Theme.AdAway.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primaryVariant</item>
        <item name="colorOnSecondary">@color/onPrimary</item>
        <!-- Modern dark background defaults -->
        <item name="colorSurface">@color/ui_surface</item>
        <item name="colorOnSurface">@color/ui_text_primary</item>
        <item name="android:colorBackground">@color/ui_bg</item>
        <item name="android:windowBackground">@drawable/bg_launch_screen</item>
        <item name="android:textColorPrimary">@color/ui_text_primary</item>
        <item name="android:textColorSecondary">@color/ui_text_secondary</item>

        <!-- Same Material 3 token fallbacks as Base.AdAway -->
        <item name="colorSurfaceVariant">?attr/colorSurface</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnSurface</item>
        <item name="colorOutlineVariant">?attr/colorOnSurface</item>
        <item name="colorSecondaryContainer">?attr/colorSecondary</item>
        <item name="colorOnSecondaryContainer">?attr/colorOnSecondary</item>
        <item name="colorTertiary">?attr/colorPrimary</item>

        <item name="android:statusBarColor">?colorPrimary</item>
    </style>

    <style name="Theme.AdAway.NoActionBar.Red" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/welcomeBackground</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/onPrimary</item>
        <item name="colorSecondaryVariant">@color/primaryVariant</item>
        <item name="colorOnSecondary">@color/welcomeBackground</item>

        <item name="android:statusBarColor">?colorOnSecondary</item>
        <item name="android:navigationBarColor">@color/welcomeBackground</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
