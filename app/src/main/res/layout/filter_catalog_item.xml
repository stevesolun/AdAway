<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/catalogItemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="6dp"
    android:checkable="false"
    app:cardBackgroundColor="@color/ui_glass"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp"
    app:checkedIcon="@drawable/baseline_check_24"
    app:checkedIconTint="?attr/colorOnPrimary"
    app:rippleColor="#33FFFFFF"
    app:strokeColor="@color/ui_glass_stroke"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Switch for selection -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/catalogItemSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbTint="@color/status_red"
            app:trackTint="@color/ui_glass_stroke" />

        <!-- Filter list name -->
        <TextView
            android:id="@+id/catalogItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textColor="@color/ui_text_primary"
            app:layout_constraintEnd_toStartOf="@id/catalogItemBadge"
            app:layout_constraintStart_toEndOf="@id/catalogItemSwitch"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="StevenBlack Unified" />

        <!-- Category badge -->
        <TextView
            android:id="@+id/catalogItemBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_background"
            android:backgroundTint="@color/ui_glass"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/ui_text_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Ads" />

        <!-- Description / URL preview -->
        <TextView
            android:id="@+id/catalogItemDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/ui_text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/catalogItemSwitch"
            app:layout_constraintTop_toBottomOf="@id/catalogItemName"
            tools:text="Unified hosts with base extensions" />

        <!-- Already added indicator -->
        <TextView
            android:id="@+id/catalogItemAlreadyAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:drawablePadding="4dp"
            android:text="@string/filter_added_success"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/ui_neon_start"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/baseline_check_24"
            app:drawableTint="@color/ui_neon_start"
            app:layout_constraintStart_toEndOf="@id/catalogItemSwitch"
            app:layout_constraintTop_toBottomOf="@id/catalogItemDescription"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>




