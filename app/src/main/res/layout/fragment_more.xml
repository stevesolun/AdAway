<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="32dp"
    android:background="@color/ui_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="80dp">

        <!-- Tools section -->
        <TextView
            android:id="@+id/more_tools_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"
            android:text="@string/more_section_tools"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/ui_text_secondary"
            android:textAllCaps="true"
            android:letterSpacing="0.08" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/ui_glass"
            app:strokeColor="@color/ui_glass_stroke"
            app:strokeWidth="1dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- DNS Log row -->
                <LinearLayout
                    android:id="@+id/more_row_dns_log"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/more_dns_log"
                        app:srcCompat="@drawable/ic_record_24dp"
                        app:tint="@color/ui_text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/more_dns_log"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/ui_text_primary" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_expand_more_24"
                        android:rotation="-90"
                        app:tint="@color/ui_text_secondary" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/ui_glass_stroke" android:layout_marginStart="56dp" />

                <!-- Custom Rules row -->
                <LinearLayout
                    android:id="@+id/more_row_custom_rules"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/more_custom_rules"
                        app:srcCompat="@drawable/ic_outline_rule_24"
                        app:tint="@color/ui_text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/more_custom_rules"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/ui_text_primary" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_expand_more_24"
                        android:rotation="-90"
                        app:tint="@color/ui_text_secondary" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/ui_glass_stroke" android:layout_marginStart="56dp" />

                <!-- Filter Sources row -->
                <LinearLayout
                    android:id="@+id/more_row_filter_sources"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/more_filter_sources"
                        app:srcCompat="@drawable/ic_collections_bookmark_24dp"
                        app:tint="@color/ui_text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/more_filter_sources"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/ui_text_primary" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_expand_more_24"
                        android:rotation="-90"
                        app:tint="@color/ui_text_secondary" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/ui_glass_stroke" android:layout_marginStart="56dp" />

                <!-- Adware Scanner row -->
                <LinearLayout
                    android:id="@+id/more_row_adware_scanner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/more_adware_scanner"
                        app:srcCompat="@drawable/ic_bug_report_24dp"
                        app:tint="@color/ui_text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/more_adware_scanner"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/ui_text_primary" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_expand_more_24"
                        android:rotation="-90"
                        app:tint="@color/ui_text_secondary" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Settings section -->
        <TextView
            android:id="@+id/more_settings_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"
            android:text="@string/more_section_settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/ui_text_secondary"
            android:textAllCaps="true"
            android:letterSpacing="0.08" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/ui_glass"
            app:strokeColor="@color/ui_glass_stroke"
            app:strokeWidth="1dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Preferences row -->
                <LinearLayout
                    android:id="@+id/more_row_preferences"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/more_preferences"
                        app:srcCompat="@drawable/ic_settings_24dp"
                        app:tint="@color/ui_text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/more_preferences"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/ui_text_primary" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_expand_more_24"
                        android:rotation="-90"
                        app:tint="@color/ui_text_secondary" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/ui_glass_stroke" android:layout_marginStart="56dp" />

                <!-- Backup & Restore row -->
                <LinearLayout
                    android:id="@+id/more_row_backup"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/more_backup"
                        app:srcCompat="@drawable/ic_settings_backup_restore_24dp"
                        app:tint="@color/ui_text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/more_backup"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/ui_text_primary" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_expand_more_24"
                        android:rotation="-90"
                        app:tint="@color/ui_text_secondary" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/ui_glass_stroke" android:layout_marginStart="56dp" />

                <!-- About row -->
                <LinearLayout
                    android:id="@+id/more_row_about"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/more_about"
                        app:srcCompat="@drawable/ic_info_24dp"
                        app:tint="@color/ui_text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/more_about"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/ui_text_primary" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_expand_more_24"
                        android:rotation="-90"
                        app:tint="@color/ui_text_secondary" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/ui_glass_stroke" android:layout_marginStart="56dp" />

                <!-- GitHub / Help row -->
                <LinearLayout
                    android:id="@+id/more_row_github"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/more_github"
                        app:srcCompat="@drawable/ic_github_24dp"
                        app:tint="@color/ui_text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/more_github"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/ui_text_primary" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_expand_more_24"
                        android:rotation="-90"
                        app:tint="@color/ui_text_secondary" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
