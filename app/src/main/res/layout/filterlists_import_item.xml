<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="@color/ui_glass"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp"
    app:rippleColor="#33FFFFFF"
    app:strokeColor="@color/ui_glass_stroke"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/filterlistsItemSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            app:thumbTint="@color/status_red"
            app:trackTint="@color/ui_glass_stroke"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/filterlistsItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textColor="@color/ui_text_primary"
            app:layout_constraintStart_toEndOf="@id/filterlistsItemSwitch"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="StevenBlack Unified" />

        <TextView
            android:id="@+id/filterlistsItemSyntax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/ui_text_secondary"
            app:layout_constraintStart_toEndOf="@id/filterlistsItemSwitch"
            app:layout_constraintTop_toBottomOf="@id/filterlistsItemName"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Hosts (IPv4)" />

        <TextView
            android:id="@+id/filterlistsItemStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/ui_neon_start"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/filterlistsItemSwitch"
            app:layout_constraintTop_toBottomOf="@id/filterlistsItemSyntax"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Subscribed"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/filterlistsItemDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/ui_text_secondary"
            app:layout_constraintStart_toEndOf="@id/filterlistsItemSwitch"
            app:layout_constraintTop_toBottomOf="@id/filterlistsItemStatus"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Unified hosts with base extensions" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

