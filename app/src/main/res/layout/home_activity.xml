<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_bg">

    <include
        android:id="@+id/content"
        layout="@layout/home_content" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/ui_surface"
        app:backgroundTint="@color/ui_surface"
        app:fabAlignmentMode="center"
        app:fabAnimationMode="slide"
        app:liftOnScroll="false"
        app:menu="@menu/next_actions"
        app:navigationContentDescription="@string/open_drawer_button_description"
        app:navigationIcon="@drawable/ic_menu_24dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fab"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/adblock_pause_button_description"
        app:layout_anchor="@id/bar"
        app:layout_anchorGravity="center|bottom"
        android:translationY="24dp"
        app:srcCompat="@drawable/icon_foreground_red"
        android:elevation="12dp"
        android:background="@null" />

    <FrameLayout
        android:id="@+id/bottom_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!--app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"-->
        <!--app:layout_behavior="@string/bottom_sheet_behavior"-->

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/home_drawer" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
